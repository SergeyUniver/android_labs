<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/track_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/track_image"
            android:layout_marginLeft="4dp"
            >

            <TextView
                android:id="@+id/track_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Song name"/>

            <TextView
                android:id="@+id/songer_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/track_name_tv"
                android:text="Songer name"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/play_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20443"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/listeners_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20443"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>