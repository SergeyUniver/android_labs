<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="empty_button_style">
        <item name="android:background">@drawable/empty_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">@drawable/empty_button_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="action_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <dimen name="action_bar_height">52dp</dimen>
</resources>
