<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background_color" />
            <stroke android:width="@dimen/empty_button_stroke_width" android:color="@color/semitransparent_white_color" />
            <corners android:radius="@dimen/empty_button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main_background_color" />
            <stroke android:width="@dimen/empty_button_stroke_width" android:color="@color/white" />
            <corners android:radius="@dimen/empty_button_corner_radius" />
        </shape>
    </item>
</selector>